@model CaseModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Case</h2>
            <hr />
            <div class="mb-3 row ps-4">
                <label asp-for="Title" class="p-0 mb-1"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="mb-3 row ps-4">
                <label asp-for="Description" class="p-0 mb-1"></label>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="mb-3 row ps-4">
                <div class="col-6 p-0">
                    <label asp-for="Priority" class="p-0 mb-1"></label>
                    <select asp-for="Priority" class="form-control">
                        <option value="1">High</option>
                        <option value="2">Normal</option>
                        <option value="3">Low</option>
                    </select>
                </div>
                <div class="col-6 p-0">
                    <div class="mb-3 row ps-4">
                        <label asp-for="Customer" class="p-0 mb-1"></label>
                        <select asp-for="Customer" class="form-control" asp-items="ViewBag.Accounts">
                            <option value="">Select a Customer</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-4">
                    <a asp-controller="Case" asp-action="Index" class="btn btn-secondary border form-control">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>